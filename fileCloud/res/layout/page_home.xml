<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="bottom"
	android:id="@+id/parent">
	
	
	<LinearLayout android:orientation="vertical" 
		          android:layout_width="fill_parent" 
		          android:layout_height="fill_parent"
		          android:id="@+id/body" 
		          android:gravity="top"
		          android:layout_weight="0.95">
    </LinearLayout>
    <View android:background="#e4e4e4"
		          android:layout_width="fill_parent" 
		          android:layout_height="2px">
    </View>
	<!--底部功能菜单栏  -->
	<LinearLayout  
	             
		         android:orientation="horizontal" 
		         android:layout_width="fill_parent"
		         android:layout_height="wrap_content" 
		         android:background="#f9f7f8"
		         android:layout_weight="0.05"
		         >		 
		<LinearLayout 
			          android:orientation="vertical" 
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent" 
			          android:id="@+id/one"
		              android:layout_weight="5" 
		              android:gravity="center_horizontal">
			<ImageView android:id="@+id/img1"
			    android:background="@drawable/h1" 
			           android:layout_gravity="top|center" 
			           android:layout_height="25dp" 
			         android:layout_width="25dp" 
			           android:layout_marginTop="4dp"/>
			<TextView  android:id="@+id/txt1"
			     android:layout_width="wrap_content"
				       android:layout_height="20dp" 
				       android:text="首页"
				       android:textSize="12dp"
				       android:textColor="#19b5e8"
				       android:layout_marginTop="4dp"
				/>
		</LinearLayout> 
		<LinearLayout 
			          android:orientation="vertical" 
			          android:layout_width="wrap_content"
			          android:layout_height="fill_parent" 
			          android:id="@+id/two"  
			          android:layout_weight="5" 
			          android:gravity="center_horizontal">
			<ImageView android:id="@+id/img2"
			    android:background="@drawable/s2" 
			           android:layout_gravity="top|center" 
			           android:layout_height="25dp" 
			         android:layout_width="25dp" 
			           android:layout_marginTop="4dp"/>
			<TextView android:id="@+id/txt2"
			    android:layout_width="wrap_content"
				      android:layout_height="20dp" 
				      android:text="档案查询"
				      android:textSize="12dp"
				      android:textColor="#727071"
				      android:layout_marginTop="4dp"
				/>
		</LinearLayout>
		<LinearLayout 
			          android:orientation="vertical" 
			          android:layout_width="wrap_content"
			          android:id="@+id/three" 
			          android:layout_height="fill_parent"
			          android:layout_weight="5" 
			          android:gravity="center_horizontal">
			<ImageView android:id="@+id/img3"
			    android:background="@drawable/d2" 
			          android:layout_gravity="top|center" 
			          android:layout_height="25dp" 
			         android:layout_width="25dp" 
			          android:layout_marginTop="4dp"
			 />
			<TextView android:id="@+id/txt3"
			    android:layout_width="wrap_content"
				      android:layout_height="20dp"
			          android:text="档案云"
			          android:textSize="12dp"
				      android:textColor="#727071"
			          android:layout_marginTop="4dp"
			/>
		</LinearLayout>
		<LinearLayout
			         android:orientation="vertical" 
			         android:layout_width="wrap_content"
			         android:id="@+id/four" 
			         android:layout_height="fill_parent"
			         android:layout_weight="5" 
			         android:gravity="center_horizontal">
			<ImageView android:id="@+id/img4"
			    android:background="@drawable/m2" 
			         android:layout_gravity="top|center" 
			         android:layout_height="25dp" 
			         android:layout_width="25dp" 
			         android:layout_marginTop="4dp"
			   />
			<TextView android:id="@+id/txt4"
			    android:layout_width="wrap_content"
				     android:layout_height="20dp" 
				     android:text="我的"
				     android:textSize="12dp"
				     android:textColor="#727071"
				     android:layout_marginTop="4dp"
				/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>

