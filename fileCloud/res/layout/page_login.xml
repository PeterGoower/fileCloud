<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context="com.guu.file.Pages.PageLogin" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="#0690d9"
        android:text="档案云平台登录"/>
    
    
    <RelativeLayout
        android:id="@+id/user_zone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/logo">
        <EditText
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入登录账号"
            android:paddingLeft="40dp"
            android:background="@drawable/edit_bg"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">     
        </EditText>
        
        <ImageView 
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user"
            android:layout_width="20dp"
            android:layout_height="20dp" >     
        </ImageView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/psw_zone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/user_zone">
        <EditText
            android:id="@+id/psw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="请输入登录密码"
            android:textSize="18sp"
            android:paddingLeft="40dp"
            android:textColor="#000000"
            android:background="@drawable/edit_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:inputType="textPassword">     
        </EditText>
        <ImageView 
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/key"
            android:layout_width="20dp"
            android:layout_height="20dp" >     
        </ImageView>
        <ImageView 
            android:id="@+id/kg"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/kg1"
            android:layout_width="60dp"
            android:layout_height="30dp" >     
        </ImageView>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/cb_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/psw_zone"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:layout_marginLeft="50dp"
        android:text="自动登录"
        android:textSize="17sp"
        android:textColor="#b2b2b2" >
    </CheckBox>
    
    <Button 
        android:id="@+id/loginBtn"
        android:layout_below="@id/psw_zone"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_login"
        android:layout_width="match_parent"
        android:layout_height="40dp" >     
    </Button>
</RelativeLayout>
